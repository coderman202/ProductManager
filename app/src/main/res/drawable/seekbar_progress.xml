<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <size android:height="2dp"/>
            <corners android:radius="2dip"/>
            <gradient
                android:startColor="@color/seekbar_empty_start_color"
                android:centerColor="@color/seekbar_empty_centre_color"
                android:endColor="@color/seekbar_empty_end_color"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <size android:height="2dp"/>
                <corners android:radius="2dip"/>
                <gradient
                    android:startColor="@color/seekbar_secondary_start_color"
                    android:centerColor="@color/seekbar_secondary_centre_color"
                    android:endColor="@color/seekbar_secondary_end_color"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size android:height="2dp"/>
                <corners
                    android:radius="2dip"/>
                <gradient
                    android:startColor="@color/seekbar_progress_start_color"
                    android:centerColor="@color/seekbar_progress_centre_color"
                    android:endColor="@color/seekbar_progress_end_color"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>