<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textAppearance">@style/StandardFontStyle</item>
    </style>

    <!--Base font style-->
    <style name="StandardFontStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/base_font_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--CUSTOM DIALOG THEME-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <!--STYLES FOR THE LIST ITEMS-->
    <style name="ListItemButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:drawablePadding">@dimen/list_item_view_drawable_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="ListItemViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body2</item>
        <item name="android:padding">@dimen/list_item_view_padding</item>
    </style>

    <style name="ListItemHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_item_header_text_color</item>
        <item name="android:padding">@dimen/list_item_view_padding</item>
    </style>

    <!--STYLES FOR THE DETAILS SCREENS-->
    <style name="DetailsButtonStyle" parent="ListItemButtonStyle">
    </style>

    <style name="DetailViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:padding">@dimen/detail_item_view_padding</item>
    </style>

    <style name="DetailHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_item_header_text_color</item>
        <item name="android:padding">@dimen/detail_item_view_padding</item>
    </style>

    <style name="DetailSubheaderStyle" parent="DetailHeaderStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body2</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/base_font_color</item>
    </style>

</resources>
